<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="5dp"
    tools:context=".EmployeeAdapter">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/initial_layout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/initial_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/initial"
            style="@style/textStyleBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/previewTextColor"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="r" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/previewTextColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/mobile_no"
        app:layout_constraintStart_toEndOf="@id/initial_layout"
        app:layout_constraintTop_toTopOf="@id/initial_layout"
        tools:text="Name" />

    <TextView
        android:id="@+id/mobile_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:textColor="@color/previewTextColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/initial_layout"
        app:layout_constraintStart_toEndOf="@id/initial_layout"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="Name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/initial_layout"
        android:background="#CCCACA"/>

</androidx.constraintlayout.widget.ConstraintLayout>